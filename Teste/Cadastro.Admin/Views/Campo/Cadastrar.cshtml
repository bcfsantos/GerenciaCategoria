@model Cadastro.Admin.Models.Campo
@{
    ViewBag.Title = "Cadastrar";
}

@using (Html.BeginForm("Cadastrar", "Campo", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="panel panel-default">
        <div class="panel-heading">Cadastrar Campo</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="Descricao">Descrição:</label>
                        @Html.TextBoxFor(c => c.Descricao, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Descricao, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="IdTipo">Tipo:</label>
                        @Html.DropDownListFor(x => x.IdTipo, (IEnumerable<SelectListItem>)ViewBag.ListaTipo, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="dvLista" class="col-lg-6" style="display:none;">
                    <div class="form-group" data-toggle="tooltip" data-placement="top" title="Separe os valores por vírgual!">
                        <label for="Lista">Lista:</label>
                        @Html.TextBoxFor(c => c.Lista, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Lista, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6"></div>
                <div class="col-lg-6">
                    <div class="alert clearfix">
                        <input type="submit" value="Cadastrar" class="btn btn-primary pull-right" />
                    </div>
                </div>
            </div>
        </div>
    </div>

}



@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#IdTipo").change(function (event) {
                if ($(this).val() == 3 || $(this).val() == 6)
                    $("#dvLista").show();
                else
                    $("#dvLista").hide();
            });


        });
    </script>
}
