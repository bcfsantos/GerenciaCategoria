@model Cadastro.Admin.Models.SubCategoria
@{
    ViewBag.Title = "Cadastrar";
}

@using (Html.BeginForm("Cadastrar", "SubCategoria", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="panel panel-default">
        <div class="panel-heading">Cadastrar SubCategoria</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="Descricao">Descrição:</label>
                        @Html.TextBoxFor(c => c.Descricao, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Descricao, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="Slug">Slug:</label>
                        @Html.TextBoxFor(c => c.Slug, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Slug, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label for="Slug">Categoria:</label>
                        @Html.DropDownListFor(x => x.IdCategoria, (IEnumerable<SelectListItem>)ViewBag.ListaCategoria, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-lg-6"></div>
                <div class="col-lg-6">
                    <div class="alert clearfix">
                        <input type="submit" value="Cadastrar" class="btn btn-primary pull-right" />
                    </div>
                </div>
            </div>
        </div>
    </div>

}

